<main class="form-auth text-center mb-5">
  <h2 class="mb-5">Please Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "mb-5") do |f| %>
    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"name@example.com" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password",class:"form-control", placeholder:"Password" %>
      <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="btn-block">
      <%= f.submit "Sign in", class:"w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <div class="text-left">
    <%= render "devise/shared/links" %>
  </div>
</main>